<h1>New Game</h1>
<p>
  <% @letters.each do |letter| %>
    <button type="button" class="btn btn-primary"><%= letter %></button>
  <% end %>
</p>
<p>
  <form action="/score" method="POST" data-turbo="false">
    <label for="guess">What's the longest word you can find?</label><br>
    <input type="text" name="guess" value="<%= params[:guess] %>"></p>
    <input type="submit" value="GO">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</p>
